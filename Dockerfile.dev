# Development Dockerfile with hot-reload
FROM python:3.12-slim

RUN apt-get update && apt-get install -y --no-install-recommends \
    procps \
    iproute2 \
    && rm -rf /var/lib/apt/lists/*

COPY --from=ghcr.io/astral-sh/uv:latest /uv /usr/local/bin/uv

WORKDIR /app

COPY packages/agent/pyproject.toml ./
RUN uv pip install --system -e ".[dev,all-providers]" 2>/dev/null || \
    uv pip install --system ".[dev]"

COPY packages/agent/src/ ./src/

RUN mkdir -p /data

ENV ARGUS_STORAGE__DATA_DIR=/data
ENV ARGUS_DEBUG=true

EXPOSE 7600

CMD ["python", "-m", "uvicorn", "argus_agent.main:app", "--host", "0.0.0.0", "--port", "7600", "--reload", "--reload-dir", "src"]
